{
  "manifest_version": 3,
  "name": "HERO.IA — Draft & Copiloto",
  "version": "0.1.1",
  "description": "HERO.IA - IA do Corretor gera rascunhos ou FollowUp de resposta com IA no WhatsApp Web, sem envio automático. Autor: Augusto Seixas Corretor de Imóveis - Creci-RJ-105921 # Especialista em TI",
  "author": "Augusto Seixas Corretor de Imóveis - Creci-RJ-105921 # Especialista em TI",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": "icons/icon128.png",
    "default_title": "HERO.IA"
  },
  "permissions": ["scripting", "clipboardWrite", "storage"],
  "host_permissions": [
    "http://localhost/*",
    "https://heroia-full-nuven-1.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js", "popup.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["botao.jpg"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}
